.page-header
  h1 Add New Sighting 
    small another bill in action yarr
.row
  .span7
    !=partial('messages')

    script(src="http://maps.google.com/maps/api/js?sensor=false")
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js")
    script(src="/js/gmap3.js")
    script(src="/js/user_on_map.js")

    div#mapContainer
    div#gMap3Container

    p

    form(method="post", action="/sightings/!=sighting.id")
      fieldset
        legend Enter bill details:

        input(type="hidden", name="_method", value="put")
        input(type="hidden", id="latitudeInput", name="sighting[latitude]", value="#{sighting.latitude}")
        input(type="hidden", id="longitudeInput", name="sighting[longitude]", value="#{sighting.longitude}")
        input(type="hidden", id="locationInput", name="sighting[location]", value="#{sighting.location}")

        .clearfix
          label(for="serialInput") Serial:
          .input
            input.xlarge(type="text", id="serialInput", name="sighting[serial]", value="#{sighting.serial}", size="30")
        .clearfix
          label(for="currencyInput") Currency:
          .input
            input(type="text", id="currencyInput", name="sighting[currency]", value="#{bill.currency}", disabled="true", size="30")
        .clearfix
          label(for="denominationInput") Denomination:
          .input
            input(type="text", id="denominationInput", name="sighting[denomination]", value="#{bill.denomination}", size="30")
        .clearfix
          label(for="commentInput") Comment: (Optional)
          .input
            input(type="text", id="commentInput", name="sighting[comment]", value="#{sighting.comment}", size="30")
        p
        p
          button(class="btn primary", type="submit", value="Update") Add

  .span3
      h3 Secondary content